{
  "name": "wiretap-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist && pnpm exec prisma generate && pnpm exec tsup",
    "dev": "tsx watch src/index.ts",
    "build:prod": "tsc && pnpm dlx prisma generate",
    "start": "nodemon",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit --project tsconfig.json",
    "validate": "pnpm run lint && pnpm run type-check",
    "deploy": "pnpm install --prod && pnpm build:prod && pm2 restart 0"
  },
  "ts-node": {
    "files": true,
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "."
    ],
    "ext": "ts, tsx",
    "exec": "ts-node --files ./src/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
